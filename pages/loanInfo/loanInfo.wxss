/* pages/loanInfo/loanInfo.wxss */

.t_btn_info{
  width: 22%;
  margin-left: 0px;
  margin-right: 6px;
  justify-content: center;
}
.renew_btn {
  font-size: 14px;
  justify-content: center;
}
.t_has_renewed {
  font-size: 11px;
  margin-top: 3px;
  text-align: center;
  color: gray;
}

.promot-text{
  display: flex;
  justify-content: center;
  margin-top: 16px;
  font-size: 20px;
}

.table {
  border-bottom: 1px solid lightgray;
}

.t_tr {
  display: flex;
  align-items: center;
  border-top: 1px solid lightgray;
}


.t_img {
    width: 25%;
    display: flex;
    margin: 2px 2px 2px 4px;
    background-color: #FFFFFF; /* gray; */
}

.t_info {
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items:flex-start;
  align-self:flex-start;
  padding-top: 3px;
}
.t_title {
  font-size: 20px;
  font-weight: bold;
}
.t_callno {
  padding-top: 5px;
  font-size: 12px;
}

.t_daynum {
  color: red;
  font-size: 14px;
}
.t_rtdate {
  padding-top: 4px;
  font-size: 12px;
}
.t_notice {
  padding-top: 4px;
  font-size: 12px;
  font-weight: bold;
  color: blue;
}
.t_expired {
  padding-top: 4px;
  font-size: 12px;
  font-weight: bold;
  color: red;
}

