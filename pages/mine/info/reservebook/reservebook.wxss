/* pages/mine/info/reservebook/reservebook.wxss */

.table {
  border-bottom: 5px solid #e9e9e9;
}

.t_tr {
  padding-top: 3px;
  padding-bottom: 3px;
  display: flex;
  align-items: center;
  border-top: 5px solid #e9e9e9;
}

.t_img {
    width: 25%;
    display: flex;
    margin: 2px 2px 2px 4px;
    background-color: #FFFFFF; /* gray; */
}

.t_info {
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items:flex-start;
  align-self:flex-start;
}

.t_title {
  font-size: 14px;
  font-weight: bold;
}

.t_attrname {
  font-size: 12px;
  color: gray;
}
.t_attrval {
  font-size: 12px;
  color: blue;
}

.promot-text{
  display: flex;
  justify-content: center;
  margin-top: 16px;
  font-size: 20px;
}
